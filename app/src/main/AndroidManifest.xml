<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.theevilroot.ith">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ITH"
        android:allowBackup="true"
        android:icon="@mipmap/ic_ith"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_ith_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.ActivityStory"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityFavorites"
            android:label="@string/favorites_title"
            android:theme="@style/AppDefault" />
    </application>
</manifest>
